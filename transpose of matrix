#include<stdio.h>
main()
{
	int i,j,arr1[3][3];
	printf("enter 9 values for array1 :");
	for(i=0;i<3;i++)
	{
		for(j=0;j<3;j++)
		{
			scanf("%d",&arr1[i][j]);		
		}
	}
	for(i=0;i<3;i++)
	{
		for(j=0;j<3;j++)
		{
			printf("\t%d",arr1[i][j]);		
		}
		printf("\n\n");
	}
	printf("\n\n");
	for(i=0;i<3;i++)
	{
		for(j=0;j<3;j++)
		{
			printf("\t%d",arr1[j][i]);		
		}
		printf("\n\n");
	}	
		
}
